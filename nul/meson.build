nul_ui_deps = [
  deps,
  dependency('gtk+-3.0'),
  libnul_dbus_gen_dep,
]

nul_service_deps = [
  deps,
  libnul_dbus_gen_dep,
]

executable(
  'nul-ui',
  'nul-ui-window.c',
  'nul-ui-application.c',
  'nul-ui-pagination-util.c',
  'nul-ui-service-state-stack.c',
  'nul-ui-artists.c',
  'nul-ui-main-menu.c',
  'nul-ui-main.c',
  nul_ui_resources,
  include_directories: include_directories(['.']),
  dependencies: nul_ui_deps,
)

if get_option('enable_stfl')
  nul_tui_stfl_deps = [
    deps,
    dependency('stfl'),
    libnul_dbus_gen_dep,
  ]

  executable(
    'nul-tui-stfl',
    'nul-tui-stfl-main.c',
    'nul-tui-stfl-application.c',
    nul_tui_resources,
    c_args: ['-D_POSIX_SOURCE'],
    dependencies: nul_tui_stfl_deps,
  )
endif

executable(
  'nul-service',
  'nul-service-main.c',
  'nul-service-application.c',
  'nul-music-service-util.c',
  'nul-geolocation-service-util.c',
  dependencies: nul_service_deps,
  include_directories: [demo_data_inc],
)

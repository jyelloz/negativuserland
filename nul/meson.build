nul_ui_deps = [
  deps,
  dependency('gtk+-3.0'),
]

nul_tui_stfl_deps = [
  deps,
  dependency('stfl'),
  libnul_dbus_gen_dep,
]

nul_service_deps = [
  deps,
  libnul_dbus_gen_dep,
]

libnul_ui_gtk = static_library(
  'libnul-ui-gtk',
  'nul-window.c',
  'nul-ui-application.c',
  'nul-ui-pagination-util.c',
  'nul-ui-service-state-stack.c',
  dependencies: [nul_ui_deps, libnul_dbus_gen_dep],
)

libnul_ui_gtk_dep = declare_dependency(
  include_directories: include_directories(['.']),
  link_with: libnul_ui_gtk,
)

executable(
  'nul-ui',
  'nul-ui-main.c',
  dependencies: [nul_ui_deps, libnul_ui_gtk_dep],
)

executable(
  'nul-tui-stfl',
  'nul-tui-stfl-main.c',
  c_args: ['-D_POSIX_SOURCE'],
  dependencies: nul_tui_stfl_deps,
)

executable(
  'nul-service',
  'nul-media-player.c',
  'nul-service-main.c',
  'nul-service-application.c',
  'nul-music-service-util.c',
  'nul-geolocation-service-util.c',
  dependencies: nul_service_deps,
  include_directories: [demo_data_inc],
)
